# Sample game.config - YAML format for a text-adventure (Zork-like)
game:
    id: zork-sample
    title: "(Don't) Go To Space - Main Config"
    version: "0.1.0"
    author: "Amelie McCarthy"
    description: "Minimal sample configuration for a text-adventure game."

engine:
    start_room: "entrance_hall"
    starting_location_description: true
    allow_saving: true
    save_path: "./saves/"
    max_turns: 1000
    difficulty: "normal"   # options: easy, normal, hard
    debug: false
    log_level: "info"      # debug, info, warn, error

ui:
    prompt: "> "
    show_exits: true
    show_items_in_room: true
    wrap_width: 80

audio:
    enabled: false
    music_volume: 0.6
    sfx_volume: 0.8

rooms:
    - id: "entrance_hall"
        name: "Entrance Hall"
        description: |
            You stand in a high-ceilinged entrance hall. Light filters in through dusty windows.
            There are doors to the north and east.
        exits:
            north: "library"
            east: "kitchen"
        items:
            - "welcome_note"

    - id: "library"
        name: "Old Library"
        description: |
            Shelves of ancient books line the walls. A ladder leans against a shelf to the east.
        exits:
            south: "entrance_hall"
        items:
            - "rusty_key"

    - id: "kitchen"
        name: "Dusty Kitchen"
        description: "An old kitchen with a cold hearth. A back door leads outside."
        exits:
            west: "entrance_hall"
            out: "garden"
        items: []

    - id: "garden"
        name: "Overgrown Garden"
        description: "Tall grasses and an old fountain. The sky is open above."
        exits:
            in: "kitchen"
        items:
            - "shovel"

items:
    - id: "welcome_note"
        name: "Welcome Note"
        description: "A folded note that reads: 'Welcome. The adventure begins.'"
        portable: true
        usable: false

    - id: "rusty_key"
        name: "Rusty Key"
        description: "A small iron key, corroded with age."
        portable: true
        usable: true
        use_targets:
            - "locked_chest"

    - id: "shovel"
        name: "Shovel"
        description: "A sturdy shovel. Useful for digging."
        portable: true
        usable: true

npcs:
    - id: "old_man"
        name: "Old Man"
        location: "library"
        description: "A hunched old man reading by candlelight."
        friendly: true
        dialogues:
            - "Ah, a newcomer! Take care in these halls."
            - "I've been waiting for someone to find the key."

objects:
    - id: "locked_chest"
        name: "Locked Chest"
        location: "garden"
        description: "A small locked chest half-buried near the fountain."
        locked: true
        key_item: "rusty_key"
        contains:
            - "gold_coin"

global_items:
    - id: "gold_coin"
        name: "Gold Coin"
        description: "An old gold coin with indecipherable markings."
        portable: true

commands:
    synonyms:
        n: "north"
        s: "south"
        e: "east"
        w: "west"
        inv: "inventory"
    disabled: []  # list of command names to disable

scenario:
    goals:
        - type: "collect"
            items:
                - "gold_coin"
            description: "Find the gold coin in the chest."
        - type: "explore"
            rooms:
                - "library"
                - "garden"
            description: "Visit the library and garden."

# End of sample config